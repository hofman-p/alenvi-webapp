// app global css
@import '~variables'
@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro');
@import './themes/input'
@import './themes/drawer'
@import './themes/btn'

.q-table td
  white-space normal

body
  color: $black
  font-family: 'Source Sans Pro', 'Roboto', 'Helvetica', 'Arial'
  font-size: 16px

h1, h2, h3, h4, h5, h6
  margin-top: 0
//   color: $tertiary
h4
  font-size: 36px
  margin-bottom: 35px
  @media (max-width: 767px)
    margin-bottom: 20px !important

div h4:only-child
  margin-bottom: 0px

.neutral-background
  background: $grey-3

.directory-header
  margin-bottom: 35px
  @media (max-width: 767px)
    margin-bottom: 10px
  & .q-btn
    padding: 0