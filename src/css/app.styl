// app global css
@import '~variables'
@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro');
@import './themes/input'
@import './themes/drawer'
@import './themes/btn'

body
  color: $black
  font-family: 'Source Sans Pro', 'Roboto', 'Helvetica', 'Arial'
  font-size: 16px

h1, h2, h3, h4, h5, h6
  margin-top: 0
//   color: $tertiary
h4
  margin-bottom: 35px
  @media (max-width: 767px)
    margin-bottom: 20px !important

.q-table tbody td
  white-space: normal
  @media (max-width: 767px)
    font-size: 14px

.q-table th
  @media (max-width: 767px)
    font-size: 13px

div h4:only-child
  margin-bottom: 0px

.neutral-background
  background: $grey-3