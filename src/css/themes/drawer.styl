.q-layout-drawer
  & .q-item
    padding: 12px 16px
  & .q-item-separator-component
    margin: 0
  & .q-item-section + .q-item-section
    margin-left: 0px
  & .q-collapsible .q-collapsible-inner > .q-item > .q-item-main > .q-item-label
    font-size: 1.125rem
  & .q-collapsible-sub-item 
    & .q-item
      padding: 8px 16px 8px 0px
      min-height: 20px
      & .q-item-side
        min-width: 24px
      & .q-item-side > .q-item-icon
        font-size: 1rem
