.q-if
  transition: all 0.3s ease-in-out
  &-inverted
    box-shadow: none
    padding: 9px 14px 11px 14px
    & .q-if-control
      color: $black
    &.q-if-focused
      box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.2)
  &-baseline
    line-height: 0
  &-control
    font-size: 1rem
    width: 16px
    height: 16px
  & input.q-input-target
    height: 20px
    line-height: 20px
  & .q-if-inner
    min-height: 20px
    margin: 0

.bg-negative
  background: white !important
  color: inherit !important

.q-input-target
  line-height: 20px
  &:before
    line-height: 20px

.input-caption
  font-size: 12px
  margin: 0 0 8px 0

.margin-input
  margin-bottom: 6px
  &.last
    margin-bottom: 24px

.q-field
  & .q-field-bottom
    padding-top: 2px
  &-with-error
    & .q-field-bottom
      color: $secondary
  &-no-input
    & .q-field-bottom
      border-top: none

.q-uploader .q-input-target
  visibility: hidden
  position: relative
  &:after
    visibility: visible
    position: absolute
    top: 0
    left: 0
    content: 'Pas de document'
    font-size: 12px

.uploader-responsive
  @media screen and (max-width: 767px)
    display: inline-table

.input-search
  font-size: 14px
  & /deep/ .q-if-control.q-icon
    margin-right: 8px