.chip-indicator
  white-space: nowrap;
  padding-left: 2px;

.chip-container
  .q-chip
    width: 100%;
    background: $dark-grey;
    padding: 0 10px;
    @media (max-width: 1024px)
      font-size: 12px;
    @media (max-width: 767px)
      display: none;
    &-main
      justify-content: flex-end;
      padding-left: 1.8rem;
      overflow: visible;
      display: flex;
      align-items: center;

    &.busy
      background: $secondary !important;

  .avatar
    z-index: 2;
    box-shadow: none;
    border: 1px solid #979797;
    @media (min-width: 1025px)
      width: 2.5rem;
      height: 2.5rem;
    @media (max-width: 1024px)
      width: 1.5rem;
      height: 1.5rem;
